<Window x:Class="MusicGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi" />
        <k:KinectUserViewer VerticalAlignment="Top" HorizontalAlignment="Center" k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" Height="100" />
        <k:KinectRegion Name="kRegion">
            <Canvas Name="tracks" Margin="0,120,0,0" Height="118" VerticalAlignment="Top">
            </Canvas>
        </k:KinectRegion>

        <Viewbox Margin="0,116,0,0" SnapsToDevicePixels="False">
            <TextBlock Name="tb" FontFamily="Helvetica" Text="Initializing..." FontSize="10" Visibility="Hidden" />
        </Viewbox>
    </Grid>
</Window>
